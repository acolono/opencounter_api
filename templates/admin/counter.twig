{% extends "layout.html" %}

{% block content %}
    <h1>Edit Counter {{ name }}</h1>
    <div>{{ value }}</div>
<ul>
  <li><a href="{{ path_for('admin.counter.view', { 'name': name }) }}">{{ name }}</a></li>

</ul>

    <form action="{{ path_for('admin.counter.view', { 'name': name }) }}" method="post"> <!-- Used route name in action -->
        <fieldset>
            <input name="name" type="name" placeholder="name">
            <input name="value" type="value" placeholder="value">
            <input name="status" placeholder="status..."></input>
        </fieldset>
        <input type="submit" class="button">
    </form>
{% endblock %}